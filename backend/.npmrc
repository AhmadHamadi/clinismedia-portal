# npm configuration for Railway builds
# Increase timeout and retry settings to handle network issues

# Network timeout settings (in milliseconds)
fetch-timeout=300000
fetch-retries=5
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Registry settings
registry=https://registry.npmjs.org/
strict-ssl=true

# Logging
loglevel=warn

# Performance
prefer-offline=false
cache-max=86400000

